<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.formal">
	<Properties>
		<Property name="appenderPatternLayout">%d{yyyy.MM.dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
		<Property name="path">logs</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${appenderPatternLayout}"/>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="TRACE">
			<AppenderRef ref="Console"/>
		</Root>
	</Loggers>
</Configuration>
